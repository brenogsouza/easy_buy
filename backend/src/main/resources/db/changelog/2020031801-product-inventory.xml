<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="paulo.santos" id="create-table-product-inventory">
        <createTable tableName="product_inventory">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="product-inventoryPK"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false" />
            </column>

            <column name="updated_at" type="TIMESTAMP" />

            <column name="uuid" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="product_id" type="BIGINT">
                <constraints foreignKeyName="product-inventory_productFK"/>
            </column>

            <column name="quantity" type="NUMERIC">
                <constraints nullable="false"/>
            </column>

            <column name="previous_quantity" type="NUMERIC" />

            <column name="quantity_offset" type="NUMERIC">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>
